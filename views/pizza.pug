extends layout

block content 
  h1= title 
  - let pizzas = results; 
  div(class="container-fluid") 
    div(class="row m-1") 
      each pizza in pizzas
        - let destination = `dispatch(\"/pizza/update?id=${pizza._id}\")`   
        div(class="row-sm-2", class="m-1") pizza #{pizza.pizza_type}(#{pizza.size}) is #{pizza.cost}
        button.btn( class="btn-primary ml-1", onclick= destination) Update  

  script.
    function dispatch(path){ 
    window.location.href=path 
    } 
    function buy(itemNum){
      alert(`The purchased item is ${itemNum+1}`)
    }